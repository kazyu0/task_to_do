<h1>タスク一覧</h1>

<%= link_to '新しいタスクを追加', new_task_path, class: 'btn' %>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>詳細</th>
      <th>締切日</th>
      <th>状態</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.details %></td>
        <td><%= task.deadline %></td>
        <td><%= task.status %></td>
        <td>
          <%= link_to '編集', edit_task_path(task), class: 'btn' %>
          <%= button_to '削除', task_path(task), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @tasks.empty? %>
  <p>タスクがありません。</p>
<% end %>